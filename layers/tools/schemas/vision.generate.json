{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["prompt"],
  "additionalProperties": false,
  "properties": {
    "prompt":          { "type": "string",  "maxLength": 2000, "description": "Image description" },
    "negative_prompt": { "type": "string",  "maxLength": 2000, "description": "What to exclude" },
    "preset":          { "type": "string",  "enum": ["draft", "balanced", "pro"], "default": "draft" },
    "aspect_ratio":    { "type": "string",  "enum": ["1:1", "4:5", "16:9", "9:16"] },
    "width":           { "type": "integer", "minimum": 256, "maximum": 1536 },
    "height":          { "type": "integer", "minimum": 256, "maximum": 1536 },
    "steps":           { "type": "integer", "minimum": 1, "maximum": 40 },
    "guidance_scale":  { "type": "number",  "minimum": 0, "maximum": 20 },
    "n":               { "type": "integer", "minimum": 1, "maximum": 4, "default": 1 },
    "seed":            { "type": "integer" }
  }
}
